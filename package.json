{
	"name": "gogrep",
	"displayName": "gogrep (Semantic Go code search and replace)",
	"description": "Structural, syntax-aware search and replace for Go code",
	"publisher": "quasilyte",
	"version": "0.1.6",
	"preview": true,
	"icon": "docs/logo.png",
	"license": "MIT",
	"author": {
		"name": "Iskander (Alex) Sharipov",
		"email": "quasilyte@gmail.com",
		"url": "https://github.com/quasilyte"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/quasilyte/vscode-gogrep.git"
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"go",
		"grep",
		"find",
		"search",
		"replace",
		"semantic",
		"structural"
	],
	"activationEvents": [
		"onCommand:gogrep.searchFile",
		"onCommand:gogrep.searchRootRecur",
		"onCommand:gogrep.searchRelativeRecur"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "gogrep",
			"properties": {
				"gogrep.binary": {
					"type": "string",
					"default": "gogrep",
					"description": "gogrep binary path",
					"scope": "resource"
				},
				"gogrep.gopath": {
					"type": "boolean",
					"default": false,
					"description": "whether to set GOPATH to go.gopath",
					"scope": "resource"
				}
			}
		},
		"commands": [
			{
				"command": "gogrep.searchFile",
				"title": "gogrep: Find/Replace in This File"
			},
			{
				"command": "gogrep.searchRootRecur",
				"title": "gogrep: Find/Replace in Workspace (recursive)"
			},
			{
				"command": "gogrep.searchRelativeRecur",
				"title": "gogrep: Find/Replace in This Directory (recursive)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
